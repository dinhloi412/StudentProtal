@{
}

@model StudentProtalWeb.Models.Entities.Student
@if (Model is null)
{   
    <p>No student was found with this id</p>
}
else
{
    <form method="post">
        <h1>Student</h1>
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" asp-for="Email" />
        </div>

        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" asp-for="Phone" />
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Subcribed" asp-for="Subcribed" />
            <label class="form-check-label" for="Subcribed">Subcribed</label>
        </div>


        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="submit" asp-action="Delete" asp-controller="Students" class="btn btn-danger ms-3">Delete</button>

        </div>
    </form>
}
